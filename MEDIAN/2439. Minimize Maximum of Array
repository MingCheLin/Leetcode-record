class Solution:
    def minimizeArrayValue(self, nums: List[int]) -> int:
        res = nums[0]
        capacity = 0
        for i in range(1, len(nums)):
            x = nums[i] - res
            if x > 0:
                if capacity > x:
                    capacity -= x
                else:
                    res += -((-x + capacity) // (i+1))
                    capacity = (-x + capacity) % (i+1)
            else:
                capacity -= x
        return res
        
        
##### 別人的
avg = 0
        total = 0 
        for i in range(len(nums)):
            total+=nums[i]
            if total/(i+1) > avg:
                avg = ceil(total/(i+1))
        return avg
